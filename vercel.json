{
  "version": 2,
  "builds": [
    {
      "src": "socket/server/app.js",
      "use": "@vercel/node"
    },
    {
      "src": "socket/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "socket/client/dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)", 
      "dest": "socket/server/app.js"
    },
    {
      "src": "/(.*)",  
      "dest": "socket/client/dist/$1"
    }
  ]
}
